<!DOCTYPE html>
<html>
<head>
  <title>MyNewApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <ul class="mainNav">
    <li><%= link_to 'Home', root_path %></li>
    <li><%= link_to 'About', about_path %></li>
    <li><%= link_to 'Cat Pictures', cats_path %></li>
    <li><%= link_to 'Spartan Basketball Players', spartan_basketballs_path %></li>
    <% if user_signed_in? %>
      <li><%= link_to "Sign Out " + current_user.email, sign_out_path, method: :delete %></li>
    <% else %>
      <li><%= link_to "Sign In", sign_in_path %></li>
    <% end %>
  </ul>

<% flash.each do |type, message| %>
  <div class="<%= type %>">
    <p><%= message %></p>
  </div>
<% end %>

<div class="pageContent">
  <div class="currentTime">
    <%= "It is currently " + current_date_and_time %>
  </div>

  <%= yield %>

</div>

</body>
</html>
